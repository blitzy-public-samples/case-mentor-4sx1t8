# EditorConfig configuration for Case Interview Practice Platform
# Addresses requirements:
# - Development Environment: Standardized code formatting across editors/IDEs
# - Code Quality Standards: Consistent TypeScript 5.0+ code style
# - Frontend Technology Stack: NextJS/React TypeScript formatting standards

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# TypeScript, JavaScript, and JSON files
[*.{ts,tsx,js,jsx,json}]
indent_style = space
indent_size = 2
max_line_length = 100

# CSS and SCSS files
[*.{css,scss}]
indent_style = space
indent_size = 2

# Markdown, YAML files
[*.{md,yml,yaml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# SQL files
[*.sql]
indent_style = space
indent_size = 4