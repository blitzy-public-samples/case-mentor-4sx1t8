# Requirement: Development Environment - Container naming and isolation
COMPOSE_PROJECT_NAME=case_interview_platform

# PostgreSQL Configuration
# Requirement: Database Configuration - Local development database settings
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=case_interview_platform
POSTGRES_PORT=5432

# Redis Configuration
# Requirement: Cache Configuration - Local Redis caching service
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password
REDIS_MAX_MEMORY=2gb

# Mailhog Configuration
# Local SMTP testing service ports
MAILHOG_SMTP_PORT=1025
MAILHOG_UI_PORT=8025